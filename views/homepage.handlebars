{{#each posts as |post| }}
<div class="newPost">
  <div class="postTitle">
    <h2>{{post.title}}</h2>
  </div>
  <div class="postContent">
    <p>{{post.content}}</p>
    <small> Post created on {{formatDate post.createdAt}} by {{post.user.name}}</small>
  </div>
  <a href="/posts/{{post.id}}"><button class="postbtn">Go To Post</button></a>
</div>
{{/each}}
