<div class="dashHeader"><h2>Your Posts:</h2>
</div>

  
{{#each posts as |post| }}
<div class="newPost">
  <div class="postTitle">
    <h2>{{post.title}}</h2>
  </div>
  <div class="postContent">
    <p>{{post.content}}</p>
    <small> Post created on {{formatDate post.createdAt}} by {{post.user.name}}</small>
  </div>
  <a href="/posts/{{post.id}}"><button class="btn2">Go To Post</button></a><button class="editbtn" data="{{post.id}}">Edit Post</button><button class="deletebtn" data="{{post.id}}">Delete Post</button>
</div>
{{/each}}

<div class="dashHeader">
<a href="/createpost"><button class="newpostbtn btn2">Create New Post</button></a>
</div>
